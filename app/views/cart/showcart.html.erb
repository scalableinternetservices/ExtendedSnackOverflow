<h1>Your Cart</h1>

<%= javascript_pack_tag 'cart'%>

<% item_ids = [] %>
<% @carts.each do |cart| %>
    <% item_ids << cart.item.id %>
    <div class="jumbotron">
        <h2><%= link_to cart.item.name, '#' %></h2>
        <p><b>Description:</b><%= cart.item.description[0..49]+'...' %></small></p>
        <p><b>Price: $</b><%= cart.item.price %></p>
        <p><b>Quantity:</b></p>
        <%= select_tag :quantity, options_for_select(1..10), {:class => "quantity"}%>
    </div>
    <br>
<% end %>
<div class='cart_total_price'>
    <h4><b>Total Cost: $<%= @totalcost%></b></h4>
    <%= button_to "Place Order", orderplaced_path(item_ids: item_ids), 
        class: "btn btn-dark cart_order_button", method: :post, :disabled => @carts.empty?%>
</div>